<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    <!-- Bot initialization -->
    <category>
        <pattern>*</pattern>
        <template>
            Please type 'hi' to begin.
        </template>
    </category>

    <category>
        <pattern>HI</pattern>
        <template>
            Hi! I'm Chip, your computer science career advisor. I'm a bot that has been designed to help you chose a career path in your Computer Science journey that fits you best. To do this, you may need to answer some questions. If you are ready to start the quiz type 'yes' or type 'no' to exit.
            <think>
                <set name="software">0</set>
                <set name="ux">0</set>
                <set name="data">0</set>
                <set name="security">0</set>
                <set name="database">0</set>
            </think>
        </template>
    </category>

    <category>
        <pattern>YES</pattern>
        <that>IF YOU ARE READY TO START THE QUIZ TYPE YES OR TYPE NO TO EXIT</that>
        <template><srai>QUESTION1</srai></template>
    </category>

    <category>
        <pattern>NO</pattern>
        <that>IF YOU ARE READY TO START THE QUIZ TYPE YES OR TYPE NO TO EXIT</that>
        <template>Thanks for stopping by! Feel free to come back anytime.</template>
    </category>

    <category>
        <pattern>BYE</pattern>
        <template>Thanks for chatting! Good luck with your career planning!</template>
    </category>

    <category>
        <pattern>EXIT</pattern>
        <template><srai>BYE</srai></template>
    </category>

    <category>
        <pattern>QUIT</pattern>
        <template><srai>BYE</srai></template>
    </category>
</aiml>