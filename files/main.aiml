<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    <!-- Bot initialization -->
    <category>
        <pattern>*</pattern>
        <template>
            To start your career guidance session, please type 'START'.
        </template>
    </category>

    <category>
        <pattern>START</pattern>
        <template>
            Hi! I'm Chip, your computer science career advisor. I can help you explore different CS career paths based on your interests and strengths. Would you like to learn about CS career options? Type 'yes' or 'no'.
            <think>
                <set name="state">intro</set>
                <set name="software">0</set>
                <set name="ux">0</set>
                <set name="data">0</set>
                <set name="security">0</set>
                <set name="database">0</set>
            </think>
        </template>
    </category>


    <category>
        <pattern>YES</pattern>
        <that>Hi! I'm Chip, your computer science career advisor. I can help you explore different CS career paths based on your interests and strengths. Would you like to learn about CS career options? Type 'yes' or 'no'.</that>
        <template><srai>QUESTION1</srai></template>
    </category>


    <category>
        <pattern>NO</pattern>
        <that>Hi! I'm Chip, your computer science career advisor. I can help you explore different CS career paths based on your interests and strengths. Would you like to learn about CS career options? Type 'yes' or 'no'.</that>
        <template>Thanks for stopping by! Feel free to come back anytime.</template>
    </category>

    <category>
        <pattern>BYE</pattern>
        <template>Thanks for chatting! Good luck with your career planning!</template>
    </category>

    <category>
        <pattern>EXIT</pattern>
        <template><srai>BYE</srai></template>
    </category>

    <category>
        <pattern>QUIT</pattern>
        <template><srai>BYE</srai></template>
    </category>
</aiml>